extends layout

block content
    .container
        h1 Connexion
        br
        form(role='form', action="/login", method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='email', name="email", placeholder='Adresse mail')
            .form-group
                input.form-control(type='password', name="password", placeholder='Mot de passe')
            button.btn.btn-default(type='submit') Valider
    a(href='/')
        button.btn.btn-primary(type="button") Retour