extends layout

block content
    .container
        h1 Inscription
        br
        form(role='form', action="/register", method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='email', name="email", placeholder='Adresse email')
            .form-group
                input.form-control(type='text', name="nom", placeholder='Nom')
            .form-group
                input.form-control(type='text', name="prenom", placeholder='Prenom')
            .form-group
                input.form-control(type='password', name="password", placeholder='Mot de passe')
            button.btn.btn-default(type='submit') Valider
    a(href='/')
        button.btn.btn-primary(type="button") Retour